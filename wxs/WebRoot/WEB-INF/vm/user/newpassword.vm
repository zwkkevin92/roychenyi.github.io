 #set($layout = "layout/index.vm")
#set($page_title=$user.nickname+"-修改密码")
#set($extjs="<!--javascrpt-plugins-layer--><script src='$link.getContextURL()/js/plugins/layer/layer.js'></script><script src='$link.getContextURL()/js/user-check.js'></script>")

<!--主体部分-->
        <div class="middle-box text-center loginscreen  animated fadeInDown">
            <div>
                <h2>欢迎光临：$user.nickname</h2>                				
                <p id="error_text" class="text-danger text-left"></p>
                <form class="m-t" role="form" id="changeform" action="$link.getContextURL()/change/new">
                    <div class="form-group">                       
                                <input type="password" class="form-control" id="oldPassword" name="oldPassword"
                                       placeholder="旧密码"   />                                                    
                    </div>
					<div class="form-group">
                        <input type="password" id="password1" name="password1" class="form-control" placeholder="新密码" required="" >
						<input type="hidden" id="prev_url" name="prev_url" value='$prev_url' />
						<input type="hidden" id="uid" name="uid" value="$user.userId"/>
                    </div>
                    <div class="form-group">                       
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="再次输入密码"   />
                                                    
                    </div>
                    <button type="button" id="changepwd" class="btn btn-primary block full-width m-b">立即验证</button>


                    <p class="text-muted text-center"> <a href="$link.getContextURL()/forgot"  target="_blank" > 忘记密码了？</a></p>

                </form>
            </div>
        </div>
       <!--主体部分-->
